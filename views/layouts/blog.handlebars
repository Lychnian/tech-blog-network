<!-- Start of the section displaying user posts -->
<h2>USER Posts</h2>
<!-- Button to navigate to the user's posts page -->
<div class="centerthisbutton">
<!-- Link wrapped in a button element -->
<button type="submit" class="btn btn-primary"><a href="/blog/new">MY POSTS</a></button>
</div>
<section>
      <!-- Check if there are posts to display -->
    {{#if posts.length}}

    <!-- Iterate through each post -->
    {{#each posts as |post|}}
    <!-- Start of a single post -->
    <article class="post">
        <div class="container-fluid blog-container">
            <!-- Post header with post title -->
            <div class="card-header blog-post">
                <!-- Link to edit the post -->
                <h4 class="card-title post-title"><a class="link" href="/blog/edit/{{id}}">{{title}}</a></h4>
                <!-- Post body containing content and author information -->
                <div class="card-body post-body">
                    <p class="card-body post-content">{{content}}</p>
                    <p class="card-text post-author">Posted by <span class="post-username">{{user.username}}</span> 
                     <!-- Display the date the post was created, formatted using the format_date helper -->
                    on {{format_date post.createdAt}}</p>
                </div>
            </div>
        </div>
    </article>
    <!-- End of a single post -->
    {{/each}}


    {{/if}}
</section>
