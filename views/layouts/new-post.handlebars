<!-- Header for creating a new post -->
<h2>Create New Post</h2>

<!-- Form for creating a new post -->
<form class="card-body new-post-form" id="new-post-form">
    <!-- Form row for post title -->
    <div class="form-row">
        <label for="post-title" class="form-label">Title</label>
        <!-- Input field for entering the post title -->
        <input type="text" id="post-title" name="post-title" class="form-input form-control" />
    </div>

    <!-- Form row for post content -->
    <div class="form-row">
        <label class="form-label" for="content">Content</label>
        <!-- Input field for entering the post content -->
        <input id="content" name="content" class="form-input form-control" />
    </div>

    <!-- Button for submitting the new post -->
    <button type="submit" class="btn btn-primary">CREATE</button>
</form>

<!-- JavaScript file for handling the creation of a new post -->
<script src="/js/new-post.js"></script>
